{% set description %}
  {{ content.body }}
{% endset %}

<article{{ attributes.addClass('job-posting__display--teaser grid-x grid-margin-x') }}>
  <div class="cell medium-8 large-9">
    <div class="job-posting__description">{{ description }}</div>
    <div class="job-posting__apply-link"><div class="field-label">Apply here:</div> {{ content.field_apply_link }}</div>
  </div>
  <div class="cell medium-4 large-3">
    <div class="job-posting__sponsor-logo">{{ content.field_sponsor }}</div>
  </div>
</article>
