{
    "name": "badcamp/badcamp-2019",
    "description": "Install drops-8 with Composer on Pantheon.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "library/owlcarousel2",
                "version": "master",
                "type": "drupal-library",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/OwlCarousel2/OwlCarousel2/archive/2.3.4.zip",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "library/slick",
                "version": "v1.8.0",
                "type": "drupal-library",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/kenwheeler/slick/archive/1.8.0.zip",
                    "reference": "master"
                }
            }
        },
        {
            "type": "git",
            "url": "https://github.com/Blanca-Esqueda/content_sync",
            "package": {
                "name": "drupal/content_sync",
                "version": "8.x-2.x",
                "type": "drupal-module"
            }
        }
    ],
    "require": {
        "php": ">=7.0.8",
        "composer/installers": "^1.0.20",
        "cweagans/composer-patches": "^1.0",
        "drupal-composer/drupal-scaffold": "^2.0.1",
        "drupal/admin_toolbar": "^1.26",
        "drupal/badcamp_sight": "1.x-dev",
        "drupal/blazy": "^2.0@RC",
        "drupal/block_class": "^1.0",
        "drupal/block_field": "^1.0@alpha",
        "drupal/cer": "^4.0@alpha",
        "drupal/config_direct_save": "^1.0",
        "drupal/config_installer": "^1.0",
        "drupal/console": "^1.8",
        "drupal/content_sync": "8.x-2.x-dev",
        "drupal/core": "^8",
        "drupal/custom_add_another": "^1.0@beta",
        "drupal/daterange_compact": "1.x-dev",
        "drupal/disable_messages": "^1.1",
        "drupal/eck": "1.x-dev",
        "drupal/embed": "^1.0",
        "drupal/empty_page": "^2.0",
        "drupal/entity": "^1",
        "drupal/entity_usage": "^2.0@alpha",
        "drupal/entityqueue": "^1.0@beta",
        "drupal/eva": "^1.3",
        "drupal/field_group": "^1.0",
        "drupal/google_analytics": "^2.3",
        "drupal/honeypot": "^1.29",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/jsonapi": "^2.4",
        "drupal/lets_camp": "6.x-dev",
        "drupal/link_attributes": "^1.8",
        "drupal/mailchimp": "^1.8",
        "drupal/menu_attributes": "1.x-dev",
        "drupal/menu_item_visibility": "1.x-dev",
        "drupal/menu_link_attributes": "^1.0",
        "drupal/metatag": "^1.7",
        "drupal/multiple_selects": "1.x-dev",
        "drupal/owlcarousel": "^1.0@alpha",
        "drupal/owlcarousel2": "^1.0@RC",
        "drupal/paragraphs": "^1.6",
        "drupal/paragraphs_class": "^1.0@alpha",
        "drupal/pathauto": "^1.3",
        "drupal/payment": "2.x-dev",
        "drupal/payment_stripe": "1.x-dev",
        "drupal/recaptcha": "^2.4",
        "drupal/recreate_block_content": "^2.0",
        "drupal/schema_metatag": "^1.3",
        "drupal/sendgrid_integration": "^1.2",
        "drupal/simple_block": "^1.0@beta",
        "drupal/slick": "^1",
        "drupal/slick_extras": "^1.0@RC",
        "drupal/slick_views": "^1.0",
        "drupal/social_media_links": "^2.6",
        "drupal/stripe": "1.x-dev",
        "drupal/video_embed_field": "^2.0",
        "drupal/viewfield": "^3.0@alpha",
        "drupal/webform": "^5.1",
        "drupal/xmlsitemap": "^1.0@alpha",
        "drush-ops/behat-drush-endpoint": "^0.0.5",
        "drush/drush": "^9",
        "library/owlcarousel2": "master",
        "library/slick": "^1",
        "npm-asset/blazy": "^1.8",
        "npm-asset/jquery.easing": "^1.4.1",
        "oomphinc/composer-installers-extender": "^1.1",
        "pantheon-systems/quicksilver-pushback": "~1",
        "rvtraveller/qs-composer-installer": "^1.1",
        "webflo/drupal-core-strict": "^8",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "behat/behat": "3.*",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "drupal/devel": "^2.0",
        "drupal/drupal-extension": "^3.1",
        "drupal/twig_xdebug": "^1.0",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "mikey179/vfsstream": "^1.2",
        "phpunit/phpunit": "^4.8",
        "symfony/css-selector": "^2.8"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "code-sniff": "echo 'No code sniff step defined.'",
        "unit-test": "echo 'No unit test step defined.'",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "find .circleci/scripts/pantheon/ -type f | xargs chmod 755",
            "find tests/scripts/ -type f | xargs chmod 755"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes",
                "drush pm-enable config_direct_save simple_block --yes",
                "drush pm-uninstall block_content --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
            "includes": [
                "sites/default/default.services.pantheon.preproduction.yml",
                "sites/default/settings.pantheon.php"
            ],
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".htaccess",
                "web.config"
            ]
        },
        "patches": {
            "drupal/core": {
                "Issue #3003150 - Media Library Widget": "https://www.drupal.org/files/issues/2018-12-05/drupal-media-library-paragraphs-3003150-19-8.x.patch"
            },
            "drupal/multiple_selects": {
                "Issue #2866543 - Support required fields": "https://www.drupal.org/files/issues/2866543.patch"
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.0.8"
        }
    }
}
